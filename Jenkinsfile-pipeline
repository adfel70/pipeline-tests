pipeline {
  agent {
    kubernetes {
      label 'slave'
      defaultContainer 'jenkinsci/jnlp-slave'
      yaml """
apiVersion: v1
kind: Pod
metadata:
labels:
  component: ci
spec:
  # Use service account that can deploy to all namespaces
  serviceAccountName: cd-jenkins
  containers:
  - name: python39
    image: python:3.9.1
    command:
    - cat
    tty: true
  - name: docker
    image: docker:latest
    command:
    - cat
    tty: true
    volumeMounts:
    - mountPath: /var/run/docker.sock
      name: docker-sock
  volumes:
    - name: docker-sock
      hostPath:
        path: /var/run/docker.sock
"""
}
   }
  stages {
    stage('Build') {
      steps {
        container('python39') {
          sh """
             ls -la
             pip install -r requirements.txt
          """
        }
      }
    }
    stage('Test') {
      steps {
        container('python39') {
          sh """
             py.test
          """
        }
      }
    }
    stage('Build Image') {
      steps {
        container('docker') {
          sh """
             docker build -t test_image:$BUILD_NUMBER .
          """
        }
      }
    }
  }
}