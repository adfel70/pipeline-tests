pipeline {
  agent {
    kubernetes {
      label 'jenkins-slave'
      defaultContainer 'jenkinsci/jnlp-slave'
      yaml """
apiVersion: v1
kind: Pod
metadata:
labels:
  component: ci
spec:
  # Use service account that can deploy to all namespaces
  serviceAccountName: jenkins
  containers:
  - name: python39
    image: python:3.9.1
    command:
    - cat
    tty: true
  - name: docker
    image: docker:latest
    command:
    - cat
    tty: true
    volumeMounts:
    - mountPath: /var/run/docker.sock
      name: docker-sock
  volumes:
    - name: docker-sock
      hostPath:
        path: /var/run/docker.sock
"""
}
   }
  stages {
    stage('Build') {
      steps {
        container('python39') {
          sh """
             ls -la
             pip install -r requirements.txt
          """
        }
      }
    }
    stage('Test') {
      steps {
        container('python39') {
          sh """
             py.test
          """
        }
      }
    }
    stage('Build Image') {
      steps {
        container('docker') {
        //build and tag
          sh """
             docker build -t adfel70/test_image:$BUILD_NUMBER .
             docker tag adfel70/test_image:$BUILD_NUMBER adfel70/test_image:latest
          """
          }
        }
      }
      stage('Push Image') {
        steps {
          container('docker') {
          //Push image
            sh """
               echo "deploying to registry"
               #todo: add credentials
               #docker push adfel70/test_image:$BUILD_NUMBER
               #docker push adfel70/test_image:latest
            """
          }
        }
      }
      stage('Deploy') {
        steps {
          container('docker') {
          //Push image
            sh """
                echo "deploying test_image:$BUILD_NUMBER to cluster"
               # todo: implement
               # kubectl apply -f deployment.yaml
            """
          }
        }
      }
  }
}