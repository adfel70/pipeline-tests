node {
    /* Requires:
    1. Docker installed on the Jenkins docker image????
    2. Pipeline plugin to be installed */

    stage('Back-end') {
        docker.image('maven:3-alpine').inside {
            sh 'mvn --version'
        }
    }

    stage('Front-end') {
        docker.image('node:14-alpine').inside {
            sh 'node --version'
        }
    }
}